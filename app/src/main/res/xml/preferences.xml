<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:tag="PREFERENCE_TAG"
    >

    <ListPreference
        android:key="@string/pref_start_fragment_key"
        android:title="@string/pref_startScreen"
        android:entries="@array/pref_start_options"
        android:entryValues="@array/pref_start_values"
        />

    <ListPreference
        android:key="@string/pref_camera_key"
        android:title="@string/pref_camera_title"
        android:entries="@array/pref_camera_options"
        android:entryValues="@array/pref_camera_values"
        />

</PreferenceScreen>